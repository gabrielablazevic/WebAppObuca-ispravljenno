@model WebAppObuca.Models.Brend

<h1>View HTML stranica - Brisanje</h1>
<h2> Brisanje brenda: @Model.Model</h2>
<h4>Jeste li sigurni u brisanje iznad navedenog brenda?</h4>
<div>
    <h4>Brend</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index">Natrag na popis brendova</a>
    </form>
</div>
