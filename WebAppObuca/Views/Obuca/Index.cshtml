@model IEnumerable<Obuca>

<h1>Popis obuće</h1>
<p>
    <a asp-action="Create" class="btn btn-success"> Unesi novu obuću</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.SlikaUrl)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Model)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cijena)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.BrendId)</th>
            <th>Radnje nad podacima</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> <img src="@Html.DisplayFor(modelItem => item.SlikaUrl)" width="100" height="100" alt="@Html.DisplayFor(modelItem => item.Model)" /> </td>
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                <td>@Html.DisplayFor(modelItem => item.Cijena)</td>
                <td>@Html.DisplayFor(modelItem => item.Brend.Model)</td>
                <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Uredi</a> | <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a></td>
            </tr>
        }
    </tbody>
</table>

